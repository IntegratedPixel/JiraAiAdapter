{
  "name": "@integratedpixel/jira-ai-cli",
  "version": "0.5.0",
  "description": "AI-friendly Jira CLI tool for command-line interaction with Jira",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "jira": "./dist/index.js"
  },
  "files": [
    "dist",
    "src/templates",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "jira": "tsx src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build",
    "postinstall": "chmod +x dist/index.js 2>/dev/null || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IntegratedPixel/JiraAiAdapter.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IntegratedPixel/JiraAiAdapter/issues"
  },
  "homepage": "https://github.com/IntegratedPixel/JiraAiAdapter#readme",
  "keywords": [
    "jira",
    "cli",
    "ai",
    "assistant",
    "command-line",
    "atlassian"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.7",
    "got": "^14.4.5",
    "inquirer": "^12.3.0",
    "keytar": "^7.9.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/csv-parse": "^1.1.12",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitest/coverage-v8": "^3.2.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.18.0",
    "nock": "^13.5.6",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
